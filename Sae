-- Beginning of SaeHub.lua
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local runService = game:GetService("RunService")

local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
gui.Name = "SaeHub"
gui.ResetOnSpawn = false

local frame = Instance.new("Frame", gui)
frame.Size = UDim2.new(0, 220, 0, 100)
frame.Position = UDim2.new(0, 20, 0.5, -50)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.Active = true
frame.Draggable = true

local function createButton(text, order, callback)
    local btn = Instance.new("TextButton", frame)
    btn.Size = UDim2.new(1, -20, 0, 35)
    btn.Position = UDim2.new(0, 10, 0, 10 + ((order - 1) * 40))
    btn.BackgroundColor3 = Color3.fromRGB(40, 170, 255)
    btn.TextColor3 = Color3.new(1, 1, 1)
    btn.Text = text
    btn.TextSize = 18
    btn.Font = Enum.Font.GothamBold
    btn.MouseButton1Click:Connect(callback)
    return btn
end

createButton("Toggle No Die", 1, function()
    runService:BindToRenderStep("NoDie", Enum.RenderPriority.Last.Value, function()
        local char = player.Character
        local hum = char and char:FindFirstChildOfClass("Humanoid")
        if hum and hum.Health < 1 then
            hum.Health = 100
        end
    end)
end)

local speedEnabled = false
createButton("Toggle Speed", 2, function()
    local char = player.Character or player.CharacterAdded:Wait()
    local hum = char:FindFirstChildOfClass("Humanoid")
    if hum then
        if speedEnabled then
            hum.WalkSpeed = 16
            speedEnabled = false
        else
            hum.WalkSpeed = 100
            speedEnabled = true
        end
    end
end)
-- End of SaeHub.lua
